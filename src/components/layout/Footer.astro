---
const currentYear = new Date().getFullYear();

const footerLinks = [
  { title: "Accueil", path: "/" },
  { title: "À propos", path: "/about/" },
  { title: "Écrits", path: "/writing/" },
  { title: "Projets", path: "/projects/" },
  { title: "Contact", path: "/contact/" },
];
---

<footer class="site-footer">
  <div class="site-footer__container">
    <nav class="site-footer__nav" aria-label="Navigation du pied de page">
      <div class="site-footer__section">
        <h3 class="site-footer__section-title"># Pages</h3>
        <ul class="site-footer__list">
          {footerLinks.map(link => (
            <li>
              <a href={link.path} class="site-footer__link">
                {link.title}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </nav>

    <div class="site-footer__bottom">
      <p class="site-footer__copyright">
        &copy; {currentYear} Calix Monnet
      </p>
    </div>
  </div>
</footer>

<style>
  .site-footer {
    position: sticky;
    bottom: 0;
    left: 0;
    z-index: 0;
    padding: 12rem;
    background-color: var(--footer-background);

    margin-top: -3.2rem;
  }

  .site-footer__container {
    max-width: var(--content-width);
    margin: 0 auto;
  }

  .site-footer__nav {
    margin-bottom: 3rem;
  }

  .site-footer__section {
    margin-bottom: 2rem;
  }

  .site-footer__section-title {
    font-size: 1.3rem;
    font-weight: 600;
    color: var(--text-disabled);
    margin-bottom: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .site-footer__list {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
  }

  .site-footer__link {
    font-size: 1.4rem;
    color: var(--text-second);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .site-footer__link:hover {
    /* color: var(--text-body); */
    color: var(--text-disabled);
  }

  .site-footer__bottom {
    padding-top: 2rem;
    border-top: 1px solid var(--border);
  }

  .site-footer__copyright {
    font-size: 1.3rem;
    color: var(--text-disabled);
    text-align: center;
  }

  .site-footer__inspired-link {
    color: var(--text-second);
    text-decoration: underline;
    text-underline-offset: 0.2em;
    transition: color 0.2s ease;
  }

  @media (max-width: 768px) {
    .site-footer {
      padding: 3rem 1.5rem 1.5rem;
      margin-top: 6rem;
    }

    .site-footer__list {
      flex-direction: column;
      gap: 1rem;
    }
  }
</style>