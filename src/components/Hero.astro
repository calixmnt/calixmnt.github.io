---
interface Props {
  title: string;
  subtitle?: string;
  description: string;
}

const { title, subtitle, description } = Astro.props;
---

<section class="hero" aria-labelledby="hero-title">
  <h1 id="hero-title" class="hero__title">{title}</h1>
  {subtitle && <p class="hero__subtitle">{subtitle}</p>}
  <p class="hero__description" set:html={description} />
</section>

<style>
  .hero {
    max-width: var(--box-content-width);
    margin-bottom: 6rem;
    text-align: justify;
  }

  .hero__title {
    font-size: 2.8rem;
    font-weight: 700;
    color: var(--heading);
    margin-bottom: 1.5rem;
    line-height: 1.2;
    letter-spacing: -0.03em;
  }

  .hero__subtitle {
    font-size: 1.8rem;
    color: var(--text-body);
    margin-bottom: 1rem;
    font-weight: 500;
    letter-spacing: -0.01em;
  }

  .hero__description {
    font-size: 1.6rem;
    line-height: 1.7;
    color: var(--text-second);
    max-width: 70ch;
    font-weight: 400;
  }

  .hero__description :global(strong) {
    color: var(--text-body);
    font-weight: 600;
  }

  @media (max-width: 768px) {
    .hero {
      margin-bottom: 4rem;
    }

    .hero__title {
      font-size: 2rem;
    }

    .hero__subtitle {
      font-size: 1.4rem;
    }

    .hero__description {
      font-size: 1.4rem;
      line-height: 2rem;
    }
  }
</style>
